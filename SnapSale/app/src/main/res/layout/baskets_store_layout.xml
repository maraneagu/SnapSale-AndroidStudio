<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="75dp"
        android:layout_marginBottom="75dp">

        <RelativeLayout
            android:id="@+id/baskets_store_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/baskets_store_logo_layout"
            android:layout_marginTop="-40dp"

            android:paddingTop="80dp"
            android:paddingBottom="50dp"
            android:paddingStart="35dp"
            android:paddingEnd="35dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/baskets_store_recycler_view"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_centerHorizontal="true"
                android:layout_below="@id/baskets_store_recycler_view"
                android:layout_marginTop="20dp"

                android:src="@drawable/icon_basket_white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/baskets_store_logo_layout"

            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/baskets_store_logo"

                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>