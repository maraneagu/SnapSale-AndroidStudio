<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"
    android:background="@drawable/carrefour_bkg"

    android:fitsSystemWindows="true"
    tools:context=".activities.storeActivities.CarrefourActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="140dp"

                android:paddingTop="20dp"
                android:paddingBottom="20dp"

                android:background="@drawable/carrefour_category_top_end">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"

                    android:src="@drawable/carrefour_logo"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/carrefour_category_btns"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_vegetables_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_vegetables_red"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_vegetables_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_meat_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_meat_red" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_meat_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_frozen_goods_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_frozen_red"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_frozen_goods_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_dairy_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_cow_red"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_dairy_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_basics_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_flour_red"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_basics_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_tins_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_tin_red"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_tins_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_baby_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_baby_red"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_baby_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_sweets_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_cookie_red"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_sweets_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_coffee_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_coffee_red"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_coffee_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_animals_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dog_red"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_animals_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_drinks_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_bottle_red"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_drinks_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_juices_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_juice_red"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_juices_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_cosmetics_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_heart_red"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_cosmetics_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carrefour_category_cleaning_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/carrefour_category_btn">

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_clean_red"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carrefour_pressed_cleaning_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/carrefour_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_red"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="40dp"

                android:paddingTop="20dp"
                android:paddingBottom="20dp"

                android:layout_marginBottom="30dp"
                android:background="@drawable/carrefour_category_bottom_end">
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/carrefour_nested_scroll_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/carrefour_translate_btn"

                android:layout_width="90dp"
                android:layout_height="50dp"

                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:background="@drawable/carrefour_translate_bkg">

                <ImageView
                    android:id="@+id/carrefour_translate_flag"

                    android:layout_width="20dp"
                    android:layout_height="15dp"

                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"

                    android:src="@drawable/flag_uk" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/carrefour_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"

                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp">

                <TextView
                    android:id="@+id/carrefour_hello_text"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/hello"
                    android:textColor="@color/lightYellow"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/carrefour_explore_text"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/carrefour_hello_text"

                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/explore_carrefour"
                    android:textColor="@color/lightYellow"
                    android:textSize="11sp" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/carrefour_recycler_view"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginStart="25dp"
                android:layout_marginTop="60dp"

                android:scrollbars="none"
                tools:ignore="TooManyViews" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/carrefour_progress_layout" />
    <include layout="@layout/carrefour_no_sales_layout" />
</LinearLayout>