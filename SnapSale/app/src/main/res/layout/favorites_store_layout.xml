<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/favorites_store_layout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="70dp"
    android:paddingBottom="70dp">

    <RelativeLayout
        android:id="@+id/favorites_store_bkg"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp">

        <ImageView
            android:id="@+id/favorites_store_logo"

            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_marginTop="60dp"
            android:layout_marginStart="30dp"

            android:src="@drawable/kaufland_logo_white" />

        <ImageView
            android:id="@+id/favorites_store_btn"

            android:layout_width="16dp"
            android:layout_height="16dp"

            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="60dp"

            android:src="@drawable/icon_heart_white"/>

        <RelativeLayout
            android:id="@+id/favorites_store_category_layout"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp"

            android:layout_below="@id/favorites_store_logo"
            android:layout_marginTop="20dp"

            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"

            android:background="@drawable/favorites_store_category_bkg">

            <TextView
                android:id="@+id/favorites_store_category"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerInParent="true"

                android:fontFamily="@font/lexend_exa"
                android:text="@string/category"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="8sp"
                tools:ignore="SmallSp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/favorites_store_period"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"

            android:layout_below="@id/favorites_store_category_layout"
            android:layout_marginTop="20dp"

            android:fontFamily="@font/lexend_deca"
            android:text="@string/period"
            android:textColor="@color/white"
            android:textSize="9sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/favorites_store_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favorites_store_period"

            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"

            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"

            android:fontFamily="@font/lexend_giga"
            android:text="@string/title"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:breakStrategy="simple"/>

        <TextView
            android:id="@+id/favorites_store_subtitle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favorites_store_title"

            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="7dp"

            android:fontFamily="@font/lexend_deca"
            android:text="@string/subtitle"
            android:textColor="@color/lightGray"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/favorites_store_quantity"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favorites_store_subtitle"

            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"

            android:fontFamily="@font/poppins_medium"
            android:text="@string/quantity"
            android:textColor="@color/gray"
            android:textSize="9sp"
            tools:ignore="SmallSp" />

        <RelativeLayout
            android:id="@+id/favorites_store_image_layout"

            android:layout_width="230dp"
            android:layout_height="230dp"

            android:layout_below="@id/favorites_store_quantity"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="25dp"
            android:layout_marginEnd="-10dp"

            android:elevation="5dp"
            android:background="@drawable/favorites_store_image_bkg">

            <ImageView
                android:id="@+id/favorites_store_image"

                android:layout_width="130dp"
                android:layout_height="130dp"
                android:contentDescription="@string/image"

                android:layout_centerInParent="true"
                android:src="@drawable/penny_logo_light_orange"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/favorites_store_price_layout"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_marginStart="-2dp"

            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="30dp"
            android:paddingEnd="40dp"

            android:elevation="10dp"
            android:background="@drawable/favorites_store_price_bkg"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/favorites_store_discount"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/lexend_deca"
                android:text="@string/discount"
                android:textColor="@color/darkBlue"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/favorites_store_old_price"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/favorites_store_discount"

                android:layout_marginTop="-3dp"
                android:layout_marginBottom="10dp"

                android:fontFamily="@font/lexend_deca"
                android:text="@string/old_price"
                android:textColor="@color/darkBlue"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/favorites_store_new_price"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/favorites_store_old_price"

                android:fontFamily="@font/lexend_exa"
                android:text="@string/new_price"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="11sp"
                tools:ignore="SmallSp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/favorites_store_recipe_btn"

            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"

            android:elevation="5dp"
            android:background="@drawable/favorites_store_recipe_btn">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_centerInParent="true"
                android:src="@drawable/icon_fork_knife" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/favorites_store_left_arrow"

        android:layout_width="50dp"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"

            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"

            android:src="@drawable/icon_arrow_left_white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/favorites_store_right_arrow"

        android:layout_width="50dp"
        android:layout_height="match_parent"

        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"

            android:src="@drawable/icon_arrow_right_white" />
    </RelativeLayout>
</RelativeLayout>