<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"
    android:background="@drawable/penny_bkg"

    android:fitsSystemWindows="true"
    tools:context=".activities.storeActivities.CarrefourActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="140dp"

                android:paddingTop="20dp"
                android:paddingBottom="20dp"

                android:background="@drawable/penny_category_top_end">

                <ImageView
                    android:layout_width="32.5dp"
                    android:layout_height="32.5dp"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"

                    android:src="@drawable/penny_logo"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/penny_category_btns"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/penny_category_vegetables_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/penny_category_btn">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_vegetables"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/penny_pressed_vegetables_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/penny_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_yellow"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/penny_category_dairy_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/penny_category_btn">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_cow"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/penny_pressed_dairy_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/penny_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_yellow"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/penny_category_meat_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/penny_category_btn">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_meat" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/penny_pressed_meat_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/penny_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_yellow"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/penny_category_frozen_goods_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/penny_category_btn">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_frozen"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/penny_pressed_frozen_goods_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/penny_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_yellow"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/penny_category_baked_goods_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/penny_category_btn">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_bread"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/penny_pressed_baked_goods_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/penny_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_yellow" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/penny_category_basics_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/penny_category_btn">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_flour_yellow"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/penny_pressed_basics_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/penny_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_yellow" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/penny_category_tins_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/penny_category_btn">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_tin"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/penny_pressed_tins_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/penny_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_yellow"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/penny_category_baby_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/penny_category_btn">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_baby"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/penny_pressed_baby_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/penny_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_yellow"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/penny_category_sweets_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/penny_category_btn">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_cookie"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/penny_pressed_sweets_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/penny_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_yellow"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/penny_category_drinks_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/penny_category_btn">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_bottle"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/penny_pressed_drinks_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/penny_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_yellow"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/penny_category_cleaning_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/penny_category_btn">

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_clean"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/penny_pressed_cleaning_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/penny_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_yellow"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/penny_category_cosmetics_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/penny_category_btn">

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_heart_yellow"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/penny_pressed_cosmetics_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/penny_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_yellow"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/penny_category_leisure_btn"

                        android:layout_width="60dp"
                        android:layout_height="70dp"

                        android:background="@drawable/penny_category_btn">

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_car"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/penny_pressed_leisure_btn"
                        android:visibility="gone"

                        android:layout_width="45dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="-20dp"

                        android:background="@drawable/penny_pressed_btn">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"

                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_dot_yellow"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="40dp"

                android:paddingTop="20dp"
                android:paddingBottom="20dp"

                android:layout_marginBottom="30dp"
                android:background="@drawable/penny_category_bottom_end">
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/penny_nested_scroll_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/penny_translate_btn"

                android:layout_width="90dp"
                android:layout_height="50dp"

                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:background="@drawable/penny_translate_bkg">

                <ImageView
                    android:id="@+id/penny_translate_flag"

                    android:layout_width="20dp"
                    android:layout_height="15dp"

                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"

                    android:src="@drawable/flag_uk" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/penny_image_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/penny_hello_text"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/hello"
                    android:textColor="@color/darkOrange"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/penny_explore_text"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/penny_hello_text"

                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/explore_penny"
                    android:textColor="@color/darkOrange"
                    android:textSize="11sp" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/penny_recycler_view"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginStart="25dp"
                android:layout_marginTop="60dp"

                android:scrollbars="none"
                tools:ignore="TooManyViews" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/penny_progress_layout" />
    <include layout="@layout/penny_no_sales_layout" />
</LinearLayout>