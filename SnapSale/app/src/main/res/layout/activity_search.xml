<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/search_navigation_drawer_layout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    tools:openDrawer="start"

    android:orientation="vertical"

    tools:context=".activities.mainActivities.SearchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/search_toolbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:elevation="8dp"
            android:background="@drawable/toolbar_bkg"

            app:titleTextColor="@color/yellow"
            app:titleTextAppearance="@style/ToolbarText"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/search_bkg"

            android:layout_below="@id/search_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"

                android:layout_marginTop="70dp"
                android:layout_marginStart="100dp"

                android:background="@color/darkYellow">
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/search_kaufland"

                android:layout_width="match_parent"
                android:layout_height="105dp"

                android:orientation="horizontal"

                android:layout_marginTop="70dp"
                android:layout_marginStart="50dp"

                android:background="@drawable/search_kaufland_bkg">

                <ImageView
                    android:layout_width="63dp"
                    android:layout_height="63dp"

                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"

                    android:layout_marginStart="20dp"

                    android:src="@drawable/search_logo_kaufland" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="85dp">

                    <TextView
                        android:id="@+id/kaufland_check_text"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="23dp"

                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/take_a_look_at_today_s"
                        android:textSize="11sp"
                        android:textColor="@color/darkSalmon"/>

                    <TextView
                        android:id="@+id/kaufland_sales_text"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_below="@id/kaufland_check_text"
                        android:layout_centerHorizontal="true"

                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/sales_offers_at"
                        android:textSize="11sp"
                        android:textColor="@color/darkSalmon"/>

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="15dp"

                        android:layout_below="@id/kaufland_sales_text"
                        android:layout_centerHorizontal="true"

                        android:layout_marginTop="2dp"
                        android:src="@drawable/kaufland_text_salmon"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"

                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"

                    android:layout_marginEnd="20dp"

                    android:src="@drawable/icon_arrow_left_salmon" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"

                android:layout_below="@id/search_kaufland"

                android:layout_marginTop="45dp"
                android:layout_marginEnd="100dp"

                android:background="@color/middleBlue">
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/search_lidl"

                android:layout_width="match_parent"
                android:layout_height="105dp"

                android:layout_below="@id/search_kaufland"

                android:layout_marginTop="45dp"
                android:layout_marginEnd="60dp"

                android:background="@drawable/search_lidl_bkg">

                <ImageView
                    android:layout_width="57.5dp"
                    android:layout_height="57.5dp"

                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"

                    android:layout_marginEnd="30dp"

                    android:src="@drawable/search_logo_lidl" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_marginStart="85dp">

                    <TextView
                        android:id="@+id/lidl_check_text"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="23dp"

                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/take_a_look_at_today_s"
                        android:textSize="11sp"
                        android:textColor="@color/yellow"/>

                    <TextView
                        android:id="@+id/lidl_sales_text"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_below="@id/lidl_check_text"
                        android:layout_centerHorizontal="true"

                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/sales_offers_at"
                        android:textSize="11sp"
                        android:textColor="@color/yellow"/>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="17.5dp"

                        android:layout_below="@id/lidl_sales_text"
                        android:layout_centerHorizontal="true"

                        android:layout_marginTop="2dp"
                        android:src="@drawable/lidl_text_yellow"
                        />
                </RelativeLayout>

                <ImageView
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"

                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"

                    android:layout_marginStart="20dp"

                    android:src="@drawable/icon_arrow_right" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"

                android:layout_below="@id/search_lidl"

                android:layout_marginTop="45dp"
                android:layout_marginStart="100dp"

                android:background="@color/darkRed">
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/search_carrefour"

                android:layout_width="match_parent"
                android:layout_height="105dp"

                android:orientation="horizontal"
                android:layout_below="@id/search_lidl"

                android:layout_marginTop="45dp"
                android:layout_marginStart="60dp"

                android:background="@drawable/search_carrefour_bkg">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"

                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"

                    android:src="@drawable/search_logo_carrefour" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="85dp">

                    <TextView
                        android:id="@+id/carrefour_check_text"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="23dp"

                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/take_a_look_at_today_s"
                        android:textSize="11sp"
                        android:textColor="@color/lightYellow"/>

                    <TextView
                        android:id="@+id/carrefour_sales_text"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_below="@id/carrefour_check_text"
                        android:layout_centerHorizontal="true"

                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/sales_offers_at"
                        android:textSize="11sp"
                        android:textColor="@color/lightYellow"/>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="15dp"

                        android:layout_below="@id/carrefour_sales_text"
                        android:layout_centerHorizontal="true"

                        android:layout_marginTop="3dp"
                        android:src="@drawable/carrefour_text_yellow"
                        />
                </RelativeLayout>

                <ImageView
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"

                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"

                    android:layout_marginEnd="20dp"

                    android:src="@drawable/icon_arrow_left" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"

                android:layout_below="@id/search_carrefour"

                android:layout_marginTop="45dp"
                android:layout_marginEnd="100dp"

                android:background="@color/darkerOrange">
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/search_penny"

                android:layout_width="match_parent"
                android:layout_height="105dp"

                android:orientation="horizontal"
                android:layout_below="@id/search_carrefour"

                android:layout_marginTop="45dp"
                android:layout_marginEnd="60dp"

                android:background="@drawable/search_penny_bkg">

                <ImageView
                    android:layout_width="77dp"
                    android:layout_height="77dp"

                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="50dp"

                    android:src="@drawable/search_logo_penny" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_marginStart="85dp">

                    <TextView
                        android:id="@+id/penny_check_text"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="23dp"

                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/take_a_look_at_today_s"
                        android:textSize="11sp"
                        android:textColor="@color/lightYellow"/>

                    <TextView
                        android:id="@+id/penny_sales_text"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_below="@id/penny_check_text"
                        android:layout_centerHorizontal="true"

                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/sales_offers_at"
                        android:textSize="11sp"
                        android:textColor="@color/lightYellow"/>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="12dp"

                        android:layout_below="@id/penny_sales_text"
                        android:layout_centerHorizontal="true"

                        android:layout_marginTop="3dp"
                        android:src="@drawable/penny_text_yellow"
                        />
                </RelativeLayout>

                <ImageView
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"

                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"

                    android:layout_marginStart="20dp"

                    android:src="@drawable/icon_arrow_right" />

            </RelativeLayout>
        </RelativeLayout>

        <com.example.snapsale.navigation.CustomBottomNavigationView
            android:id="@+id/search_navigation_bar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"

            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"

            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/navigation_bar_bkg"
            android:elevation="2dp"
            app:itemIconSize="25dp"
            app:itemIconTint="@drawable/navigation_bar_item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_menu" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/search_navigation_drawer"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:elevation="16dp"

        android:layout_gravity="start"
        android:background="@drawable/navigation_drawer_bkg"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer"

        app:itemIconTint="@color/middleSalmon"
        app:itemTextColor="@color/yellow"
        app:itemTextAppearance="@style/NavigationDrawerText"/>
</androidx.drawerlayout.widget.DrawerLayout>