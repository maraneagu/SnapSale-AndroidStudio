<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/favorites_navigation_drawer_layout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    tools:openDrawer="start"

    android:background="@drawable/favorites_bkg"
    tools:context=".activities.mainActivities.FavoritesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/favorites_toolbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:elevation="8dp"
            android:background="@drawable/toolbar_bkg"

            app:titleTextColor="@color/yellow"
            app:titleTextAppearance="@style/ToolbarText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:layout_below="@id/favorites_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingTop="60dp"
                android:paddingBottom="60dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"

                    android:orientation="vertical"
                    android:gravity="start">

                    <ImageView
                        android:layout_width="17.5dp"
                        android:layout_height="17.5dp"

                        android:layout_marginStart="40dp"
                        android:src="@drawable/icon_heart_yellow" />

                    <TextView
                        android:id="@+id/favorites_explore_text"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"

                        android:fontFamily="@font/lexend_giga"
                        android:text="@string/explore_favored"
                        android:textAlignment="textStart"
                        android:textColor="@color/yellow"
                        android:textSize="9sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:orientation="vertical"
                    android:gravity="end">

                    <RelativeLayout
                        android:id="@+id/favorites_translate_btn"

                        android:layout_width="90dp"
                        android:layout_height="45dp"

                        android:layout_marginEnd="-3dp"
                        android:layout_gravity="end|center"

                        android:background="@drawable/favorites_translate_bkg">

                        <ImageView
                            android:id="@+id/favorites_translate_flag"

                            android:layout_width="20dp"
                            android:layout_height="15dp"

                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="30dp"

                            android:src="@drawable/flag_uk" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favorites_btns"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"

            android:layout_below="@id/favorites_toolbar"
            android:layout_marginTop="160dp"

            android:layout_alignBottom="@id/favorites_navigation_bar"
            android:layout_marginBottom="100dp"
            android:baselineAligned="false">

            <RelativeLayout
                android:id="@+id/favorites_kaufland_btn"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:elevation="5dp"

                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"

                android:background="@drawable/favorites_kaufland_btn">

                <ImageView
                    android:layout_height="60dp"
                    android:layout_width="60dp"

                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp"

                    android:src="@drawable/kaufland_logo_white_border"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/favorites_store_number_bkg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_alignParentTop="true"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="60dp">

                        <TextView
                            android:id="@+id/favorites_kaufland_number"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="27.5dp"

                            android:fontFamily="@font/lexend_giga"
                            android:text="@string/n"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/favorites_kaufland_favored_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/favorites_kaufland_number"
                            android:layout_marginTop="2dp"

                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/favored"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/favorites_kaufland_sales_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/favorites_kaufland_favored_text"
                            android:layout_marginTop="2dp"

                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/sales"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            tools:ignore="SmallSp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/favorites_kaufland_sales_text"
                            android:layout_marginTop="10dp"

                            android:src="@drawable/icon_heart_white"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/favorites_lidl_btn"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:elevation="5dp"
                android:layout_marginEnd="25dp"

                android:background="@drawable/favorites_lidl_btn">

                <ImageView
                    android:layout_height="55dp"
                    android:layout_width="55dp"

                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="50dp"

                    android:src="@drawable/lidl_logo_white_border"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignParentBottom="true"
                    android:background="@drawable/favorites_store_number_bkg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="60dp">

                        <TextView
                            android:id="@+id/favorites_lidl_number"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="27.5dp"

                            android:fontFamily="@font/lexend_giga"
                            android:text="@string/n"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/favorites_lidl_favored_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/favorites_lidl_number"
                            android:layout_marginTop="2dp"

                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/favored"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/favorites_lidl_sales_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/favorites_lidl_favored_text"
                            android:layout_marginTop="2dp"

                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/sales"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            tools:ignore="SmallSp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/favorites_lidl_sales_text"
                            android:layout_marginTop="10dp"

                            android:src="@drawable/icon_heart_white"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/favorites_carrefour_btn"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:elevation="5dp"

                android:layout_marginEnd="25dp"
                android:background="@drawable/favorites_carrefour_btn">

                <ImageView
                    android:layout_height="60dp"
                    android:layout_width="60dp"

                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp"

                    android:src="@drawable/carrefour_logo_white_border"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/favorites_store_number_bkg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_alignParentTop="true"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="60dp">

                        <TextView
                            android:id="@+id/favorites_carrefour_number"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="27.5dp"

                            android:fontFamily="@font/lexend_giga"
                            android:text="@string/n"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/favorites_carrefour_favored_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/favorites_carrefour_number"
                            android:layout_marginTop="2dp"

                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/favored"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/favorites_carrefour_sales_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/favorites_carrefour_favored_text"
                            android:layout_marginTop="2dp"

                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/sales"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            tools:ignore="SmallSp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/favorites_carrefour_sales_text"
                            android:layout_marginTop="10dp"

                            android:src="@drawable/icon_heart_white"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/favorites_penny_btn"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:elevation="5dp"

                android:layout_marginEnd="25dp"

                android:background="@drawable/favorites_penny_btn">

                <ImageView
                    android:layout_height="60dp"
                    android:layout_width="60dp"

                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="50dp"

                    android:src="@drawable/penny_logo_white_border"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignParentBottom="true"
                    android:background="@drawable/favorites_store_number_bkg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="60dp">

                        <TextView
                            android:id="@+id/favorites_penny_number"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="27.5dp"

                            android:fontFamily="@font/lexend_giga"
                            android:text="@string/n"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/favorites_penny_favored_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/favorites_penny_number"
                            android:layout_marginTop="2dp"

                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/favored"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/favorites_penny_sales_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/favorites_penny_favored_text"
                            android:layout_marginTop="2dp"

                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/sales"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            tools:ignore="SmallSp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/favorites_penny_sales_text"
                            android:layout_marginTop="10dp"

                            android:src="@drawable/icon_heart_white"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <com.example.snapsale.navigation.CustomBottomNavigationView
            android:id="@+id/favorites_navigation_bar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"

            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"

            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/favorites_navigation_bar_bkg"
            android:elevation="2dp"
            app:itemIconSize="25dp"
            app:itemIconTint="@drawable/navigation_bar_item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_menu" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/favorites_navigation_drawer"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:elevation="16dp"

        android:layout_gravity="start"
        android:background="@drawable/navigation_drawer_bkg"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer"

        app:itemIconTint="@color/middleOrange"
        app:itemTextColor="@color/yellow"
        app:itemTextAppearance="@style/NavigationDrawerText"/>
</androidx.drawerlayout.widget.DrawerLayout>