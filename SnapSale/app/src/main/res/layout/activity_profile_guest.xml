<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.guestActivities.ProfileGuestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:background="@drawable/profile_bkg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="160dp"

        android:background="@drawable/profile_layout_bkg">

        <TextView
            android:id="@+id/profile_username_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="70dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"

            android:text="@string/username"
            android:fontFamily="@font/poppins"
            android:textColor="@color/middleYellow"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/profile_username_ll"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_below="@id/profile_username_text"

            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"

            android:background="@drawable/profile_text_view_bkg"
            >

            <TextView
                android:id="@+id/profile_username"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                android:text="@string/username"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/lightYellow"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/profile_email_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_username_ll"

            android:layout_marginTop="25dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"

            android:text="@string/email"
            android:fontFamily="@font/poppins"
            android:textColor="@color/middleYellow"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/profile_email_ll"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_below="@id/profile_email_text"

            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"

            android:background="@drawable/profile_text_view_bkg"
            >

            <TextView
                android:id="@+id/profile_email"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                android:text="@string/email"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/lightYellow"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/profile_password_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_email_ll"

            android:layout_marginTop="25dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"

            android:text="@string/password"
            android:fontFamily="@font/poppins"
            android:textColor="@color/middleYellow"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/profile_password_ll"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_below="@id/profile_password_text"

            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"

            android:background="@drawable/profile_text_view_bkg"
            >

            <TextView
                android:id="@+id/profile_password"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"

                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                android:text="@string/strong_password"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/lightYellow"
                android:textSize="12sp"

                tools:ignore="TextViewEdits" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_change_password"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_below="@id/profile_password_ll"
            android:gravity="center"

            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"

            android:background="@drawable/profile_text_view_bkg"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:text="@string/change_password"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/middleYellow"
                android:textSize="12sp"
                android:textAlignment="center"

                android:drawablePadding="10dp"
                app:drawableEndCompat="@drawable/icon_lock_outline"
                app:drawableTint="@color/middleYellow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_logout"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_below="@id/profile_change_password"
            android:gravity="center"

            android:layout_marginTop="25dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"

            android:background="@drawable/profile_logout_bkg"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:text="@string/logout"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/darkSalmon"
                android:textSize="12sp"
                android:textAlignment="center"

                android:drawablePadding="10dp"
                app:drawableEndCompat="@drawable/icon_logout"
                app:drawableTint="@color/darkSalmon" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="130dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/profile_icon_bkg">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_centerInParent="true"
            android:src="@drawable/logo_profile"/>
    </RelativeLayout>

    <include layout="@layout/profile_guest_redirect_layout" />
</RelativeLayout>