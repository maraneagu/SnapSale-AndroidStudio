<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:padding="20dp"

    android:background="@drawable/home_autocomplete_search_bkg">

    <RelativeLayout
        android:id="@+id/home_autocomplete_search_image_layout"

        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_gravity="center"

        android:layout_marginEnd="30dp"
        android:background="@drawable/home_autocomplete_search_image_bkg">

        <ImageView
            android:id="@+id/home_autocomplete_search_image"

            android:layout_width="35dp"
            android:layout_height="35dp"

            android:layout_centerInParent="true"
            android:src="@drawable/penny_logo_light_orange"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center">

        <ImageView
            android:id="@+id/home_autocomplete_search_logo"

            android:layout_width="10dp"
            android:layout_height="10dp"

            android:src="@drawable/kaufland_logo_blue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/home_autocomplete_search_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/home_autocomplete_search_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"

            android:fontFamily="@font/lexend_giga"
            android:text="@string/title"
            android:textSize="9sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/blue"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/home_autocomplete_search_subtitle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_below="@id/home_autocomplete_search_title"
            android:layout_marginTop="5dp"

            android:fontFamily="@font/lexend_deca"
            android:text="@string/subtitle"
            android:textSize="8sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/blue"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/home_autocomplete_search_quantity"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_below="@id/home_autocomplete_search_subtitle"
            android:layout_marginTop="6dp"

            android:fontFamily="@font/poppins_medium"
            android:text="@string/quantity"
            android:textSize="7sp"
            android:textAlignment="center"
            android:textColor="@color/darkGray"
            tools:ignore="SmallSp" />
    </RelativeLayout>

</LinearLayout>