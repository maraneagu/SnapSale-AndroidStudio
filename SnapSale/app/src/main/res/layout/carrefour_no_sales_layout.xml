<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/carrefour_no_sales_layout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:visibility="visible"

    android:orientation="vertical"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/carrefour_no_sales_text"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <TextView
            android:id="@+id/sorry_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/poppins_bold"
            android:text="@string/sorry"
            android:textColor="@color/lightYellow"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sorry_text"

            android:fontFamily="@font/poppins_medium"
            android:text="@string/there_are_no_sales_available_for_this_category"
            android:textColor="@color/lightYellow"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/carrefour_no_sales_yellow_bar"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_below="@id/carrefour_no_sales_text"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"

        android:background="@drawable/carrefour_blue_bar_bkg" />

    <RelativeLayout
        android:id="@+id/carrefour_no_sales_bar_layout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:elevation="2dp"
        android:layout_below="@id/carrefour_no_sales_yellow_bar"
        android:layout_marginStart="20dp"

        android:background="@drawable/carrefour_bar_bkg">

        <RelativeLayout
            android:id="@+id/carrefour_no_sales_bar_icon"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"

            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_centerInParent="true"
                android:src="@drawable/logo_carrefour"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="25dp"
            android:paddingBottom="25dp"

            android:layout_below="@id/carrefour_no_sales_bar_icon"
            android:background="@drawable/carrefour_sale_price_bkg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="55dp"

                android:fontFamily="@font/lexend_giga"
                android:text="@string/check_in_again_tomorrow"
                android:textColor="@color/darkRed"
                android:textSize="8sp"
                tools:ignore="SmallSp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/carrefour_no_sales_salmon_bar"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_below="@id/carrefour_no_sales_bar_layout"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"

        android:background="@drawable/carrefour_yellow_bar_bkg" />
</RelativeLayout>