<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/home_navigation_drawer_layout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    tools:openDrawer="start"

    android:background="@drawable/home_bkg"
    tools:context=".activities.guestActivities.HomeGuestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/home_toolbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:background="@drawable/home_toolbar_bkg"

            app:titleTextColor="@color/yellow"
            app:titleTextAppearance="@style/ToolbarText"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@id/home_toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"

                    android:gravity="end"
                    android:background="@drawable/home_toolbar_layout_bkg">

                    <RelativeLayout
                        android:id="@+id/home_translate_btn"

                        android:layout_width="80dp"
                        android:layout_height="45dp"

                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="-3dp"

                        android:background="@drawable/home_translate_bkg">

                        <ImageView
                            android:id="@+id/home_translate_flag"

                            android:layout_width="20dp"
                            android:layout_height="15dp"

                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="30dp"

                            android:src="@drawable/flag_uk" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/home_search_layout"

                    android:layout_width="320dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="60dp"
                    android:paddingTop="60dp"
                    android:paddingBottom="60dp"

                    android:background="@drawable/home_search_layout_bkg">

                    <TextView
                        android:id="@+id/home_search_explore_text"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="20dp"

                        android:fontFamily="@font/lexend_giga"
                        android:text="@string/explore_search"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="8sp"
                        tools:ignore="SmallSp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_below="@id/home_search_explore_text"
                        android:orientation="horizontal"

                        android:layout_marginStart="35dp"
                        android:layout_marginEnd="35dp"

                        android:background="@drawable/home_search_autocomplete_bkg">

                        <AutoCompleteTextView
                            android:id="@+id/home_search_autocomplete"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"

                            android:drawableStart="@drawable/icon_search"
                            android:drawableTint="@color/blue"
                            android:drawablePadding="10dp"

                            android:hint="@string/search"
                            android:textColorHint="@color/blue"

                            android:fontFamily="@font/poppins_medium"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"

                            tools:ignore="SmallSp"

                            android:background="@android:color/transparent"
                            android:popupBackground="@color/yellow"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_below="@id/home_search_layout"
                    android:background="@color/darkYellow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical"

                        android:paddingTop="70dp"
                        android:paddingBottom="70dp"

                        android:background="@drawable/home_left_corner_bkg">

                        <ImageView
                            android:layout_width="17.5dp"
                            android:layout_height="17.5dp"

                            android:layout_gravity="end"
                            android:layout_marginStart="45dp"
                            android:layout_marginEnd="45dp"

                            android:src="@drawable/icon_search" />

                        <TextView
                            android:id="@+id/home_stores_explore_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="end"

                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="50dp"
                            android:layout_marginStart="45dp"
                            android:layout_marginEnd="45dp"

                            android:fontFamily="@font/lexend_giga"
                            android:text="@string/explore_stores"
                            android:textColor="@color/yellow"
                            android:textSize="9sp"
                            android:textAlignment="textEnd"
                            tools:ignore="SmallSp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"

                            android:orientation="horizontal"
                            android:baselineAligned="false"

                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:layout_marginBottom="10dp">

                            <RelativeLayout
                                android:id="@+id/home_carrefour_btn"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"

                                android:layout_marginEnd="10dp"
                                android:padding="10dp"

                                android:elevation="5dp"
                                android:background="@drawable/home_guest_carrefour_store_btn">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:background="@drawable/white_guest_border_bkg">

                                    <ImageView
                                        android:layout_height="45dp"
                                        android:layout_width="45dp"

                                        android:layout_centerInParent="true"
                                        android:src="@drawable/carrefour_logo_white"/>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_centerHorizontal="true"
                                        android:layout_alignParentBottom="true"

                                        android:paddingStart="22.5dp"
                                        android:paddingEnd="22.5dp"
                                        android:paddingTop="7dp"
                                        android:paddingBottom="7dp"

                                        android:background="@drawable/home_stores_sales_count_bkg">

                                        <TextView
                                            android:id="@+id/home_carrefour_sales_count"

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:layout_centerInParent="true"

                                            android:fontFamily="@font/poppins_medium"
                                            android:text="@string/question_mark"
                                            android:textAlignment="center"
                                            android:textStyle="bold"
                                            android:textColor="@color/white"
                                            android:textSize="8sp"
                                            tools:ignore="SmallSp" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/home_penny_btn"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"

                                android:elevation="5dp"
                                android:padding="10dp"

                                android:background="@drawable/home_penny_store_btn">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:background="@drawable/home_yellow_border_bkg">

                                    <ImageView
                                        android:layout_height="50dp"
                                        android:layout_width="50dp"

                                        android:layout_centerInParent="true"
                                        android:src="@drawable/search_logo_penny"/>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_centerHorizontal="true"
                                        android:layout_alignParentBottom="true"

                                        android:paddingStart="22.5dp"
                                        android:paddingEnd="22.5dp"
                                        android:paddingTop="7dp"
                                        android:paddingBottom="7dp"

                                        android:background="@drawable/home_stores_sales_count_bkg">

                                        <TextView
                                            android:id="@+id/home_penny_sales_count"

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:layout_centerInParent="true"

                                            android:fontFamily="@font/poppins_medium"
                                            android:text="@string/n"
                                            android:textAlignment="center"
                                            android:textStyle="bold"
                                            android:textColor="@color/lightYellow"
                                            android:textSize="8sp"
                                            tools:ignore="SmallSp" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"

                            android:orientation="horizontal"
                            android:baselineAligned="false"

                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:layout_marginBottom="70dp">

                            <RelativeLayout
                                android:id="@+id/home_kaufland_btn"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"

                                android:layout_marginEnd="10dp"
                                android:padding="10dp"

                                android:elevation="5dp"
                                android:background="@drawable/home_kaufland_store_btn">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:background="@drawable/home_middle_orange_border_bkg">

                                    <ImageView
                                        android:layout_height="45dp"
                                        android:layout_width="45dp"

                                        android:layout_centerInParent="true"
                                        android:src="@drawable/search_logo_kaufland"/>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_centerHorizontal="true"
                                        android:layout_alignParentBottom="true"

                                        android:paddingStart="22.5dp"
                                        android:paddingEnd="22.5dp"
                                        android:paddingTop="7dp"
                                        android:paddingBottom="7dp"

                                        android:background="@drawable/home_stores_sales_count_bkg">

                                        <TextView
                                            android:id="@+id/home_kaufland_sales_count"

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:layout_centerInParent="true"

                                            android:fontFamily="@font/poppins_medium"
                                            android:text="@string/n"
                                            android:textAlignment="center"
                                            android:textStyle="bold"
                                            android:textColor="@color/middleOrange"
                                            android:textSize="8sp"
                                            tools:ignore="SmallSp" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/home_lidl_btn"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"

                                android:elevation="5dp"
                                android:padding="10dp"

                                android:background="@drawable/home_guest_lidl_store_btn">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:background="@drawable/white_guest_border_bkg">

                                    <ImageView
                                        android:layout_height="45dp"
                                        android:layout_width="45dp"

                                        android:layout_centerInParent="true"
                                        android:src="@drawable/lidl_logo_white"/>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_centerHorizontal="true"
                                        android:layout_alignParentBottom="true"

                                        android:paddingStart="22.5dp"
                                        android:paddingEnd="22.5dp"
                                        android:paddingTop="7dp"
                                        android:paddingBottom="7dp"

                                        android:background="@drawable/home_stores_sales_count_bkg">

                                        <TextView
                                            android:id="@+id/home_lidl_sales_count"

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:layout_centerInParent="true"

                                            android:fontFamily="@font/poppins_medium"
                                            android:text="@string/question_mark"
                                            android:textAlignment="center"
                                            android:textStyle="bold"
                                            android:textColor="@color/white"
                                            android:textSize="8sp"
                                            tools:ignore="SmallSp" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="17.5dp"
                            android:layout_height="17.5dp"

                            android:layout_marginStart="45dp"
                            android:layout_marginEnd="45dp"

                            android:src="@drawable/icon_basket_yellow" />

                        <TextView
                            android:id="@+id/home_baskets_explore_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="50dp"
                            android:layout_marginStart="45dp"
                            android:layout_marginEnd="45dp"

                            android:fontFamily="@font/lexend_giga"
                            android:text="@string/explore_baskets"
                            android:textColor="@color/yellow"
                            android:textSize="9sp"
                            android:textAlignment="textEnd"
                            tools:ignore="SmallSp" />

                        <LinearLayout
                            android:id="@+id/home_penny_baskets_btn"

                            android:layout_width="match_parent"
                            android:layout_height="80dp"

                            android:orientation="horizontal"

                            android:layout_marginEnd="-2dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginBottom="20dp"

                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"

                            android:background="@drawable/home_penny_baskets_bkg">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"

                                    android:layout_centerInParent="true"
                                    android:background="@drawable/icon_basket_filled_lightest_orange">

                                    <TextView
                                        android:id="@+id/home_penny_baskets_count"

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:layout_marginTop="18dp"

                                        android:fontFamily="@font/poppins_medium"
                                        android:text="@string/n"
                                        android:textSize="9sp"
                                        android:textColor="@color/darkOrange"
                                        android:textAlignment="center"
                                        tools:ignore="SmallSp" />
                                </RelativeLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"

                                android:background="@drawable/home_penny_baskets_logo_bkg">

                                <ImageView
                                    android:layout_width="55dp"
                                    android:layout_height="20dp"

                                    android:layout_centerInParent="true"
                                    android:src="@drawable/penny_logo_lightest_orange" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_carrefour_baskets_btn"

                            android:layout_width="match_parent"
                            android:layout_height="80dp"

                            android:layout_marginStart="-2dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="20dp"

                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"

                            android:background="@drawable/home_guest_carrefour_baskets_bkg">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"

                                android:background="@drawable/home_guest_carrefour_baskets_logo_bkg">

                                <ImageView
                                    android:layout_width="72dp"
                                    android:layout_height="25dp"

                                    android:layout_centerInParent="true"
                                    android:src="@drawable/carrefour_text_white" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"

                                    android:layout_centerInParent="true"
                                    android:background="@drawable/icon_basket_filled_white">

                                    <TextView
                                        android:id="@+id/home_carrefour_baskets_count"

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:layout_marginTop="18dp"

                                        android:fontFamily="@font/poppins_medium"
                                        android:text="@string/question_mark"
                                        android:textSize="9sp"
                                        android:textAlignment="center"
                                        android:textColor="@color/darkerRed"
                                        tools:ignore="SmallSp" />
                                </RelativeLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_lidl_baskets_btn"

                            android:layout_width="match_parent"
                            android:layout_height="80dp"

                            android:layout_marginEnd="-2dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginBottom="20dp"

                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"

                            android:background="@drawable/home_lidl_baskets_bkg">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"

                                    android:layout_centerInParent="true"
                                    android:background="@drawable/icon_basket_filled_lightest_blue">

                                    <TextView
                                        android:id="@+id/home_lidl_baskets_count"

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:layout_marginTop="18dp"

                                        android:fontFamily="@font/poppins_medium"
                                        android:text="@string/n"
                                        android:textSize="9sp"
                                        android:textColor="@color/darkBlue"
                                        android:textAlignment="center"
                                        tools:ignore="SmallSp" />
                                </RelativeLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"

                                android:background="@drawable/home_lidl_baskets_logo_bkg">

                                <ImageView
                                    android:layout_width="42dp"
                                    android:layout_height="20dp"

                                    android:layout_centerInParent="true"
                                    android:src="@drawable/lidl_text_lightest_blue" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_kaufland_baskets_btn"

                            android:layout_width="match_parent"
                            android:layout_height="80dp"

                            android:layout_marginStart="-2dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="90dp"

                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"

                            android:background="@drawable/home_guest_kaufland_baskets_bkg">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"

                                android:background="@drawable/home_guest_kaufland_baskets_logo_bkg">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="18dp"

                                    android:layout_centerInParent="true"
                                    android:src="@drawable/kaufland_text_white" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"

                                    android:layout_centerInParent="true"
                                    android:background="@drawable/icon_basket_filled_white">

                                    <TextView
                                        android:id="@+id/home_kaufland_baskets_count"

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:layout_marginTop="18dp"

                                        android:fontFamily="@font/poppins_medium"
                                        android:text="@string/question_mark"
                                        android:textSize="9sp"
                                        android:textColor="@color/darkerRed"
                                        android:textAlignment="center"
                                        tools:ignore="SmallSp" />
                                </RelativeLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <com.example.snapsale.navigation.CustomBottomNavigationView
            android:id="@+id/navigation_bar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"

            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"

            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/home_navigation_bar_bkg"
            android:elevation="2dp"
            app:itemIconSize="25dp"
            app:itemIconTint="@drawable/navigation_bar_item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_menu" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/home_navigation_drawer"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:elevation="16dp"

        android:layout_gravity="start"
        android:background="@drawable/navigation_drawer_bkg"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer"

        app:itemIconTint="@color/middleOrange"
        app:itemTextColor="@color/yellow"
        app:itemTextAppearance="@style/NavigationDrawerText"/>
</androidx.drawerlayout.widget.DrawerLayout>
