<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/baskets_navigation_drawer_layout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    tools:openDrawer="start"

    android:background="@drawable/baskets_bkg"
    tools:context=".activities.mainActivities.BasketsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/baskets_toolbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:elevation="8dp"
            android:background="@drawable/toolbar_bkg"

            app:titleTextColor="@color/yellow"
            app:titleTextAppearance="@style/ToolbarText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"

            android:layout_below="@id/baskets_toolbar"
            android:layout_above="@id/baskets_text"

            android:paddingTop="20dp">

            <RelativeLayout
                android:id="@+id/baskets_stores_btn"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/baskets_guest_stores_btn">

                    <ImageView
                        android:id="@+id/baskets_stores_logo"

                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"

                        android:layout_marginEnd="90dp"
                        android:src="@drawable/stores_guest_logo_basket" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:layout_alignEnd="@id/baskets_stores_logo"

                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"

                        android:layout_marginStart="-2dp"
                        android:layout_marginEnd="90dp"
                        android:background="@drawable/baskets_store_left_number_bkg">

                        <TextView
                            android:id="@+id/baskets_stores_number"

                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"

                            android:fontFamily="@font/caveat_bold"
                            android:text="@string/question_mark"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:textStyle="bold">
                        </TextView>

                        <TextView
                            android:id="@+id/baskets_stores_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/baskets_stores_number"

                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/baskets_stores_text"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:ignore="SmallSp">
                        </TextView>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/baskets_lidl_btn"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:background="@color/darkerRed">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/baskets_lidl_btn">

                    <ImageView
                        android:id="@+id/baskets_lidl_logo"

                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"

                        android:layout_marginStart="60dp"
                        android:src="@drawable/lidl_logo_basket" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:layout_alignStart="@id/baskets_lidl_logo"

                        android:layout_marginEnd="80dp"
                        android:layout_marginStart="90dp">

                        <TextView
                            android:id="@+id/baskets_lidl_number"

                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"

                            android:fontFamily="@font/caveat_bold"
                            android:text="@string/n"
                            android:textSize="16sp"
                            android:textColor="@color/lightestBlue"
                            android:textStyle="bold">
                        </TextView>

                        <TextView
                            android:id="@+id/baskets_lidl_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/baskets_lidl_number"

                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/baskets_lidl_text"
                            android:textSize="10sp"
                            android:textColor="@color/lightestBlue"
                            android:textStyle="bold"
                            tools:ignore="SmallSp">
                        </TextView>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/baskets_carrefour_btn"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:background="@color/middleBlue">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/baskets_guest_carrefour_btn">

                    <ImageView
                        android:id="@+id/baskets_carrefour_logo"

                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"

                        android:layout_marginEnd="90dp"
                        android:src="@drawable/carrefour_guest_logo_basket" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:layout_alignEnd="@id/baskets_carrefour_logo"

                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"

                        android:layout_marginStart="-2dp"
                        android:layout_marginEnd="90dp"
                        android:background="@drawable/baskets_store_left_number_bkg">

                        <TextView
                            android:id="@+id/baskets_carrefour_number"

                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"

                            android:fontFamily="@font/caveat_bold"
                            android:text="@string/question_mark"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:textStyle="bold">
                        </TextView>

                        <TextView
                            android:id="@+id/baskets_carrefour_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/baskets_carrefour_number"

                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/baskets_carrefour_text"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:ignore="SmallSp">
                        </TextView>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/baskets_penny_btn"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:background="@color/darkerRed">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/baskets_penny_btn">

                    <ImageView
                        android:id="@+id/baskets_penny_logo"

                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"

                        android:layout_marginStart="60dp"
                        android:layout_marginBottom="10dp"

                        android:src="@drawable/penny_logo_basket" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:layout_alignStart="@id/baskets_penny_logo"

                        android:layout_marginEnd="80dp"
                        android:layout_marginStart="90dp">

                        <TextView
                            android:id="@+id/baskets_penny_number"

                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"

                            android:fontFamily="@font/caveat_bold"
                            android:text="@string/n"
                            android:textSize="16sp"
                            android:textColor="@color/lightestOrange"
                            android:textStyle="bold">
                        </TextView>

                        <TextView
                            android:id="@+id/baskets_penny_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/baskets_penny_number"

                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/baskets_penny_text"
                            android:textSize="10sp"
                            android:textColor="@color/lightestOrange"
                            android:textStyle="bold"
                            tools:ignore="SmallSp">
                        </TextView>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/baskets_kaufland_btn"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:background="@color/darkOrange">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/baskets_guest_kaufland_btn">

                    <ImageView
                        android:id="@+id/baskets_kaufland_logo"

                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"

                        android:layout_marginEnd="90dp"
                        android:src="@drawable/kaufland_guest_logo_basket" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:layout_alignEnd="@id/baskets_kaufland_logo"

                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"

                        android:layout_marginStart="-2dp"
                        android:layout_marginEnd="90dp"
                        android:background="@drawable/baskets_store_left_number_bkg">

                        <TextView
                            android:id="@+id/baskets_kaufland_number"

                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"

                            android:fontFamily="@font/caveat"
                            android:text="@string/question_mark"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:textStyle="bold">
                        </TextView>

                        <TextView
                            android:id="@+id/baskets_kaufland_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/baskets_kaufland_number"

                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/baskets_kaufland_text"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:ignore="SmallSp">
                        </TextView>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/baskets_text"

            android:layout_width="match_parent"
            android:layout_height="170dp"

            android:layout_above="@id/baskets_navigation_bar"
            android:background="@color/darkerRed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/baskets_text_bkg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"

                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/baskets_icon"

                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:layout_marginTop="35dp"
                            android:layout_marginStart="40dp"

                            android:src="@drawable/icon_basket_yellow" />

                        <TextView
                            android:id="@+id/baskets_explore_text"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="15dp"
                            android:layout_marginStart="40dp"

                            android:fontFamily="@font/lexend_giga"
                            android:text="@string/explore_baskets"
                            android:textColor="@color/yellow"
                            android:textAlignment="textStart"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:orientation="vertical"
                        android:gravity="center">

                        <RelativeLayout
                            android:id="@+id/baskets_translate_btn"

                            android:layout_width="90dp"
                            android:layout_height="45dp"
                            android:layout_gravity="end"

                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="-3dp"

                            android:background="@drawable/baskets_translate_bkg">

                            <ImageView
                                android:id="@+id/baskets_translate_flag"

                                android:layout_width="20dp"
                                android:layout_height="15dp"

                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="30dp"

                                android:src="@drawable/flag_uk" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <com.example.snapsale.navigation.CustomBottomNavigationView
            android:id="@+id/baskets_navigation_bar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"

            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/navigation_bar_bkg"
            android:elevation="2dp"
            app:itemIconSize="25dp"
            app:itemIconTint="@drawable/navigation_bar_item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_menu" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/baskets_navigation_drawer"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:elevation="16dp"

        android:layout_gravity="start"
        android:background="@drawable/navigation_drawer_bkg"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer"

        app:itemIconTint="@color/middleOrange"
        app:itemTextColor="@color/yellow"
        app:itemTextAppearance="@style/NavigationDrawerText"/>
</androidx.drawerlayout.widget.DrawerLayout>