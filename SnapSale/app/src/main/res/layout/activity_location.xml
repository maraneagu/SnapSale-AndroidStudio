<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/location_navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    tools:openDrawer="start"

    android:orientation="vertical"

    tools:context=".activities.mainActivities.LocationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_alignParentBottom="true"
            android:background="@drawable/location_bkg" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/location_toolbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:elevation="8dp"
            android:background="@drawable/location_toolbar_bkg"

            app:titleTextColor="@color/yellow"
            app:titleTextAppearance="@style/ToolbarText"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/location_cardview_map"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:elevation="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="140dp"

            app:cardCornerRadius="60dp">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/location_map"
                android:name="com.google.android.gms.maps.SupportMapFragment">

                <RelativeLayout
                    android:id="@+id/location_search_layout"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:elevation="30dp"
                    android:padding="30dp"

                    android:layout_marginTop="45dp"
                    android:background="@drawable/location_search_bkg">

                    <TextView
                        android:id="@+id/location_search_text"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"

                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/find_the_stores_closest_to_you"
                        android:textAlignment="center"
                        android:textColor="@color/yellow"
                        android:textSize="9sp"
                        tools:ignore="SmallSp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_below="@id/location_search_text"

                        android:orientation="horizontal"

                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="15dp"

                        android:background="@drawable/location_search_autocomplete_bkg">

                        <AutoCompleteTextView
                            android:id="@+id/location_search_autocomplete"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"

                            android:drawableStart="@drawable/icon_search"
                            android:drawableTint="@color/yellow"
                            android:drawablePadding="10dp"

                            android:hint="@string/search"
                            android:textColorHint="@color/yellow"
                            android:completionThreshold="3"

                            android:fontFamily="@font/poppins"
                            android:textSize="10sp"
                            android:textColor="@color/yellow"

                            tools:ignore="SmallSp"

                            android:background="@android:color/transparent"
                            android:popupBackground="@color/lightestYellow"/>

                        <ImageView
                            android:id="@+id/location_search_cancel_btn"
                            android:visibility="gone"

                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:src="@drawable/icon_clear"

                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="15dp"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/location_current_location_btn"

                    android:layout_width="37dp"
                    android:layout_height="37dp"

                    android:elevation="15dp"

                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="135dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="8dp"

                    android:drawableTop="@drawable/icon_current_location"
                    android:drawableTint="@color/middleYellow"
                    android:background="@drawable/location_map_btns"/>

                <Button
                    android:id="@+id/location_zoom_in_btn"

                    android:layout_width="37dp"
                    android:layout_height="37dp"

                    android:elevation="15dp"

                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="85dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="6dp"

                    android:drawableTop="@drawable/icon_plus"
                    android:drawableTint="@color/middleYellow"
                    android:background="@drawable/location_map_btns"/>

                <Button
                    android:id="@+id/location_zoom_out_btn"

                    android:layout_width="37dp"
                    android:layout_height="37dp"

                    android:elevation="15dp"

                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="35dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="6dp"

                    android:drawableTop="@drawable/icon_minus"
                    android:drawableTint="@color/middleYellow"
                    android:background="@drawable/location_map_btns"/>

                <LinearLayout
                    android:id="@+id/location_direction_layout"
                    android:visibility="gone"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:elevation="30dp"

                    android:orientation="vertical"
                    android:layout_gravity="top"
                    android:layout_marginTop="45dp"

                    android:background="@drawable/location_direction_bkg">

                    <ImageView
                        android:id="@+id/direction_cancel_button"

                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:layout_gravity="top|end"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="10dp"

                        android:src="@drawable/icon_cancel_yellow" />

                    <TextView
                        android:id="@+id/direction_title"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"

                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/title"
                        android:textAlignment="center"
                        android:textColor="@color/yellow"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/direction_snippet"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="8dp"

                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/title"
                        android:textAlignment="center"
                        android:textColor="@color/middleYellow"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/direction_back"

                            android:layout_width="17dp"
                            android:layout_height="17dp"

                            android:layout_alignParentStart="true"
                            android:layout_marginStart="25dp"

                            android:src="@drawable/icon_arrow_left"/>

                        <ImageView
                            android:id="@+id/direction_next"

                            android:layout_width="17dp"
                            android:layout_height="17dp"

                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="25dp"

                            android:src="@drawable/icon_arrow_right"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal"
                        android:layout_marginBottom="30dp">

                        <TextView
                            android:id="@+id/direction_distance"

                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:layout_marginStart="50dp"
                            android:gravity="center"

                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/distance"
                            android:textColor="@color/yellow"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"/>

                        <TextView
                            android:id="@+id/direction_duration"

                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/duration"
                            android:textColor="@color/yellow"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"

                            app:drawableBottomCompat="@drawable/icon_car" />

                        <RelativeLayout
                            android:id="@+id/direction_button"

                            android:orientation="vertical"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="50dp">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"

                                android:layout_centerHorizontal="true"

                                android:src="@drawable/icon_directions" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </fragment>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="40dp"

            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:elevation="15dp">

                <ImageView
                    android:id="@+id/location_kaufland_btn"

                    android:layout_width="52.5dp"
                    android:layout_height="52.5dp"

                    android:layout_centerInParent="true"
                    android:padding="8dp"

                    android:src="@drawable/location_logo_kaufland"
                    android:background="@drawable/location_logo_btns" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:elevation="15dp">

                <ImageView
                    android:id="@+id/location_lidl_btn"

                    android:layout_width="52.5dp"
                    android:layout_height="52.5dp"

                    android:layout_centerInParent="true"
                    android:padding="5dp"

                    android:src="@drawable/location_logo_lidl"
                    android:background="@drawable/location_logo_btns"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:elevation="15dp">

                <ImageView
                    android:id="@+id/location_penny_btn"

                    android:layout_width="52.5dp"
                    android:layout_height="52.5dp"

                    android:layout_centerInParent="true"
                    android:padding="5dp"

                    android:src="@drawable/location_logo_penny"
                    android:background="@drawable/location_logo_btns"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:elevation="15dp">

                <ImageView
                    android:id="@+id/location_carrefour_btn"

                    android:layout_width="52.5dp"
                    android:layout_height="52.5dp"

                    android:layout_centerInParent="true"
                    android:padding="6.5dp"

                    android:src="@drawable/location_logo_carrefour"
                    android:background="@drawable/location_logo_btns"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/location_navigation_drawer"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:layout_gravity="start"
        android:background="@drawable/navigation_drawer_bkg"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer"

        app:itemIconTint="@color/middleOrange"
        app:itemTextColor="@color/yellow"
        app:itemTextAppearance="@style/NavigationDrawerText"/>
</androidx.drawerlayout.widget.DrawerLayout>