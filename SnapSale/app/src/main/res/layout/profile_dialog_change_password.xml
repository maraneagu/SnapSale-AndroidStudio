<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/dialog_change_password"

    android:layout_margin="20dp"
    android:padding="40dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_box"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@drawable/cp_box_bkg">

        <ImageView
            android:id="@+id/dialog_cancel_button"

            android:layout_width="22.5dp"
            android:layout_height="22.5dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dialog_icon"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"

            android:src="@drawable/icon_cancel" />

        <ImageView
            android:id="@+id/dialog_icon"

            android:layout_width="55dp"
            android:layout_height="55dp"

            app:layout_constraintTop_toTopOf="@id/dialog_cancel_button"
            app:layout_constraintBottom_toTopOf="@id/dialog_email_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:src="@drawable/icon_lock_outline" />

        <TextView
            android:id="@+id/dialog_change_password_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/dialog_icon"

            android:paddingStart="15dp"
            android:paddingEnd="15dp"

            android:layout_marginTop="8dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"

            android:fontFamily="@font/poppins_bold"
            android:text="@string/change_password"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/dialog_email_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/dialog_icon"

            android:paddingStart="15dp"
            android:paddingEnd="15dp"

            android:layout_marginTop="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"

            android:fontFamily="@font/poppins_medium"
            android:text="@string/email_change_password"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/dialog_email"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/dialog_email_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"

            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:text="@string/email"
            android:textAlignment="center"

            android:backgroundTint="@color/white"
            />

        <Button
            android:id="@+id/dialog_reset_button"

            android:layout_width="90dp"
            android:layout_height="40dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_email"
            app:layout_constraintBottom_toBottomOf="@id/dialog_box"

            android:layout_marginTop="45dp"
            android:layout_marginBottom="50dp"

            android:fontFamily="@font/poppins_medium"
            android:text="@string/send"
            android:textColor="@drawable/cp_reset_btn_text"
            android:textSize="11sp"
            android:background="@drawable/cp_reset_btn"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>