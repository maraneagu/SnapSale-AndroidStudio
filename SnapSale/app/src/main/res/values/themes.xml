<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.SnapSale" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="Theme.SnapSale" parent="Base.Theme.SnapSale" />

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="NavigationDrawerText">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolbarText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="SearchViewQueryHint">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:editTextColor">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>

    <style name="Theme.SnapSale.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SnapSale.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SnapSale.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>